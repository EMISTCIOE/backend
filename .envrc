# direnv configuration for uv-managed project
# If you use direnv, this will automatically activate the venv and lock pip

# Activate the virtual environment
source .venv/bin/activate

# Create aliases to prevent accidental pip usage
alias pip='echo " Use uv instead of pip. Run: uv add <package>" && false'
alias pip3='echo " Use uv instead of pip. Run: uv add <package>" && false'
alias python-m-pip='echo " Use uv instead of pip. Run: uv add <package>" && false'

# Show uv reminder
echo " Virtual environment activated (.venv)"
echo " Using uv for package management"
echo " Run 'make help' to see available commands"
